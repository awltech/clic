<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="commands" name="commands" schema="schema/commands.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.worldline.clic.internal.view.CommandLineClientView"
            icon="icons/icon.png"
            id="com.worldline.wlrobots.clic.view"
            name="CLiC"
            restorable="true">
      </view>
   </extension>
   <extension
         point="com.worldline.clic.commands">
      <command
            description="Displays the list of the available commands"
            id="list"
            implementation="com.worldline.clic.internal.commands.impl.ListCommandsCommand">
      </command>
      <command
            description="Gives parameters information for given command"
            id="help"
            implementation="com.worldline.clic.internal.commands.impl.HelpCommand">
      </command>
      <command
            description="command test"
            id="pre"
            implementation="com.worldline.clic.internal.commands.impl.CommandTest">
      </command>
      <command
            description="Displays the list of the available commands Flow"
            id="listFlow"
            implementation="com.worldline.clic.internal.commands.impl.ListCommandsCommandFlow">
      </command>
      <commandFlow
            name="flow">
         <commandRef
               name="list">
         </commandRef>
         <commandRef
               name="liste">
         </commandRef>
      </commandFlow>
      <commandFlow
            name="flowTest">
         <commandRef
               name="list">
         </commandRef>
         <commandRef
               name="listFlow">
         </commandRef>
      </commandFlow>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="com.worldline.clic.internal.console.InteractiveConsoleFactory"
            icon="icons/icon.png"
            label="CLiC console">
      </consoleFactory>
   </extension>

</plugin>
